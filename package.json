{
  "name": "cypress-demoqa-tests",
  "version": "1.0.0",
  "description": "Cypress test automation for demoqa.com",
  "scripts": {
    "test": "cypress run",
    "test:headed": "cypress run --headed",
    "test:headless": "cypress run --headless",
    "test:open": "cypress open",
    "test:report": "cypress run && npm run merge-reports && npm run generate-report",
    "merge-reports": "mochawesome-merge cypress/reports/*.json -o cypress/reports/merged-report.json",
    "generate-report": "marge cypress/reports/merged-report.json -o cypress/reports --inline",
    "clean-reports": "rm -rf cypress/reports && mkdir -p cypress/reports"
  },
  "devDependencies": {
    "cypress": "^15.8.0",
    "cypress-mochawesome-reporter": "^3.7.0",
    "cypress-xpath": "^2.0.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0"
  }
}
